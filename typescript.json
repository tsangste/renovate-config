{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "typescript",
      "matchPackagePatterns": ["^typescript", "^ts-"],
      "excludePackageNames": [
        "ts-auto-mock",
        "ts-jest"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "typescript",
      "matchPackagePatterns": ["^typescript", "^ts-"],
      "excludePackageNames": [
        "ts-auto-mock",
        "ts-jest"
      ],
      "matchUpdateTypes": ["major"]
    }
  ]
}
