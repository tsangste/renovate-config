{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>tsangste/renovate-config:swc"
  ],
  "packageRules": [
    {
    "groupName": "nodejs",
    "matchDatasources": ["npm"],
    "matchPackageNames": ["@types/node"],
    "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "nodejs",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "extends": "packages:jsTest",
      "groupName": "JS test packages",
      "matchUpdateTypes": [ "minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "extends": "packages:jsTest",
      "groupName": "JS test packages",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    },
    {
      "extends": "packages:linters",
      "groupName": "linters",
      "matchUpdateTypes": [ "minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "extends": "packages:linters",
      "groupName": "linters",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [ "minor", "patch"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "jest",
        "@typescript-eslint",
        "eslint",
        "@swc",
        "serverless"
      ],
      "excludePackageNames": [
        "@types/jest",
        "@types/supertest",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "prettier",
        "@types/eslint",
        "@types/serverless",
        "@types/node"
      ],
      "groupName": "all non-major devDependencies",
      "minimumReleaseAge": "3 days"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "jest",
        "@typescript-eslint",
        "eslint",
        "@swc",
        "serverless"
      ],
      "excludePackageNames": [
        "@types/jest",
        "@types/supertest",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "prettier",
        "@types/eslint",
        "@types/serverless",
        "@types/node"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "all major devDependencies",
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch-dependencies",
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "groupName": "all major dependencies",
      "groupSlug": "all-major-dependencies",
      "matchUpdateTypes": ["major"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "labels": ["dependencies", "breaking"]
    }
  ]
}
