{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>tsangste/renovate-config:node",
    "local>tsangste/renovate-config:aws",
    "local>tsangste/renovate-config:semantic-release",
    "local>tsangste/renovate-config:swc",
    "local>tsangste/renovate-config:winston"
  ],
  "packageRules": [
    {
      "extends": "packages:jsTest",
      "groupName": "JS test packages",
      "matchUpdateTypes": [ "minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "extends": "packages:jsTest",
      "groupName": "JS test packages",
      "matchUpdateTypes": ["major"]
    },
    {
      "extends": "packages:linters",
      "groupName": "linters",
      "matchUpdateTypes": [ "minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "extends": "packages:linters",
      "groupName": "linters",
      "matchUpdateTypes": ["major"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [ "minor", "patch"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "jest",
        "@typescript-eslint",
        "eslint",
        "@swc",
        "serverless"
      ],
      "excludePackageNames": [
        "@types/jest",
        "@types/supertest",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "prettier",
        "@types/eslint",
        "@types/serverless",
        "@types/node"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "jest",
        "@typescript-eslint",
        "eslint",
        "@swc",
        "serverless"
      ],
      "excludePackageNames": [
        "@types/jest",
        "@types/supertest",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "prettier",
        "@types/eslint",
        "@types/serverless",
        "@types/node"
      ]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ]
    }
  ]
}
