{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(dependencies)",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    ":prConcurrentLimit10",
    ":pinVersions",
    ":semanticCommits",
    ":semanticCommitScopeDisabled",
    ":semanticPrefixChore",
    "mergeConfidence:all-badges"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"]
    }
  ],
  "timezone": "Europe/London"
}
