    {
      "groupName": "serverless",
      "matchPackagePrefixes": ["serverless"],
      "matchPackageNames": ["@types/serverless"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    }
  ]
}
